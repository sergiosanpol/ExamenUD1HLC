<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hlc.diurno.examenud1hlc.SolicitarNombre">

    <TextView
        android:id="@+id/tv_titulo_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo_nombre" />

    <EditText
        android:id="@+id/et_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint_nombre"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/bt_aceptar_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center"
        android:text="@string/aceptar_nombre"
        android:onClick="iniciarSaludo"/>

    <TextView
        android:id="@+id/tv_saludo_respuesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
